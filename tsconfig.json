{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "jsx": "preserve",
      "strict": true,
      "noImplicitAny": false,
      "noImplicitThis": true,
      "alwaysStrict": true,
      //"noUnusedLocals": true,
      //"noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "noEmit": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "incremental": true,
      "paths": {
        "@shared/*": ["./shared/*"],
        "@modules/*": ["./shared/*"],
      },
    },
    "include": [
      "**/*"
    ],
    "exclude": [
      "node_modules",
      "shared",
    ]
  }
  